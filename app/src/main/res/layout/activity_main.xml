<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:padding="@dimen/activity_padding"
    tools:context="com.example.android.reportcard.MainActivity">

    <View style="@style/HorizontalBorderLine" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            style="@style/TitleText"
            android:layout_weight="2"
            android:text="@string/category_text" />

        <View style="@style/VerticalBorderLine" />

        <TextView
            style="@style/TitleText"
            android:layout_weight="1"
            android:text="@string/grade_text" />
    </LinearLayout>

    <View style="@style/HorizontalBorderLine" />

    <ListView
        android:id="@+id/list"
        android:layout_width="match_parent"
        android:layout_height="@dimen/zero_dp"
        android:layout_weight="1"
        android:divider="@null"
        android:orientation="vertical" />

    <View style="@style/HorizontalBorderLine" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            style="@style/ResultText"
            android:layout_weight="2"
            android:text="@string/overall_grade" />

        <TextView
            android:id="@+id/overall_grade"
            style="@style/ResultText"
            android:layout_weight="1" />
    </LinearLayout>

    <View style="@style/HorizontalBorderLine" />
</LinearLayout>